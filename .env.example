# PromiseThread Environment Variables
# ====================================
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# Full connection URL (preferred for Docker)
DATABASE_URL=postgresql://promisethread:hackfest2025@postgres:5432/promisethread

# Or use individual variables (for local development)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=promisethread
# DB_USER=promisethread
# DB_PASSWORD=hackfest2025

# =============================================================================
# BACKEND
# =============================================================================
SECRET_KEY=change-this-in-production-use-a-secure-random-key

# =============================================================================
# BLOCKCHAIN
# =============================================================================
BLOCKCHAIN_RPC_URL=http://blockchain:8545

# For testnet deployments (optional)
# MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
# FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
# PRIVATE_KEY=your_wallet_private_key

# =============================================================================
# FRONTEND (Vite)
# =============================================================================
# These should point to the HOST machine's ports (accessed from browser)
VITE_API_URL=http://localhost:8000
VITE_BLOCKCHAIN_RPC=http://localhost:8545
